        </ul>
    </nav>

    <div class="container">
        <h1>Edit Movie</h1>

        <form action="/updatemovie" method="post" enctype="multipart/form-data">
            <input type="text" value="<%=singleData._id%>" hidden placeholder="Enter Movie ID" name="id">
            <input type="text" value="<%=singleData.title%>" placeholder="Enter Movie Title" name="title">
            <input type="text" value="<%=singleData.genre%>" placeholder="Enter Genre" name="genre">
            <input type="number" value="<%=singleData.year%>" placeholder="Enter Year" name="year">
            <input type="file" name="poster">
            <img src="<%=singleData.poster%>" width="10%" alt="">
            <button type="submit">Update Movie</button>
        </form>
    </div>
</body>
</html>
