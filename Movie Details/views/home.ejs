<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movie Store</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <nav class="navbar">
    <div class="logo">ðŸŽ¬ Movie Store</div>
    <ul class="nav-links">
      <li><a href="#">Home</a></li>
      <li><a href="#">About</a></li>
      <li><a href="#">Contact</a></li>
    </ul>
    <a href="/addmovie" class="btn">+ Add Movie</a>
  </nav>

  <!-- Movies Section -->
  <div class="container">
    <h1 class="title">Available Movies</h1>
    <div class="movie-grid">
      <% data.map((e, i) => { %>
        <div class="movie-card">
          <div class="poster-container">
            <img src="<%= e.poster %>" alt="<%= e.title %>" class="movie-poster">
          </div>
          <div class="movie-info">
            <h3 class="movie-title"><%= e.title %></h3>
            <p class="movie-genre"><%= e.genre %></p>
            <p class="movie-year"><%= e.year %></p>
            <div class="movie-actions">
              <a href="/editmovie?id=<%= e._id %>" class="btn edit">Edit</a>
              <a href="/deletemovie?id=<%= e._id %>" class="btn delete">Delete</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
